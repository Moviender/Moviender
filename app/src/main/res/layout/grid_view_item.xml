<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.uniwa.moviender.network.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/imdb_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.imdb_id}"
            app:layout_constraintBottom_toTopOf="@id/genre_ids_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="IMDB_ID" />

        <TextView
            android:id="@+id/genre_ids_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:genreIds="@{movie.genre_ids}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imdb_id_tv"
            app:layout_constraintBottom_toTopOf="@id/poster_path_tv"
            tools:text="GENRES" />

        <TextView
            android:id="@+id/poster_path_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.poster_path}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/genre_ids_tv"
            app:layout_constraintBottom_toTopOf="@id/title_tv"
            tools:text="POSTER" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.title}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/poster_path_tv"
            app:layout_constraintBottom_toTopOf="@id/overview_tv"
            tools:text="TITLE" />

        <TextView
            android:id="@+id/overview_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.overview}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            tools:text="OVERVIEW" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>