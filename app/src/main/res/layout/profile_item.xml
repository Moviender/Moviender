<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="friend"
            type="com.uniwa.moviender.model.Friend" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_friend_username"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="9dp"
            android:text="@{friend.username}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Username" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/request_pending_tv"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_request_pending"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/item_friend_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toEndOf="@id/item_friend_username"
            app:layout_constraintTop_toTopOf="@id/item_friend_username"
            tools:visibility="gone" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_request"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/item_friend_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/item_friend_username"
            app:layout_constraintTop_toTopOf="@id/item_friend_username"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_reject_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reject_request"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/item_friend_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/request_accept_btn"
            app:layout_constraintTop_toTopOf="@id/item_friend_username"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>